<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/booksListFragment">

    <fragment
        android:id="@+id/booksListFragment"
        android:name="com.mastermovilesua.persistencia.tfm_detectorpentagramas.ui.booksList.view.BooksListFragment"
        android:label="Books List"
        tools:layout="@layout/fragment_books_list" >
        <action
            android:id="@+id/action_booksListFragment_to_pagesListFragment"
            app:destination="@id/pagesListFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_booksListFragment_to_editBookDialog"
            app:destination="@id/editBookDialog" />
    </fragment>
    <fragment
        android:id="@+id/pagesListFragment"
        android:name="com.mastermovilesua.persistencia.tfm_detectorpentagramas.ui.pagesList.view.PagesListFragment"
        tools:layout="@layout/fragment_pages_list">
        <action
            android:id="@+id/action_pagesListFragment_to_pageDetailFragment"
            app:destination="@id/pageDetailFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <argument
            android:name="bookId"
            app:argType="integer" />
        <action
            android:id="@+id/action_pagesListFragment_to_addPageDialog"
            app:destination="@id/addPageDialog" />
        <action
            android:id="@+id/action_pagesListFragment_to_editBookDialog"
            app:destination="@id/editBookDialog" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/pageDetailFragment"
        android:name="com.mastermovilesua.persistencia.tfm_detectorpentagramas.ui.pageDetail.view.PageDetailFragment"
        android:label="Page Detail"
        tools:layout="@layout/fragment_page_detail">
        <argument
            android:name="pageId"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/editBookDialog"
        android:name="com.mastermovilesua.persistencia.tfm_detectorpentagramas.ui.common.editBook.EditBookDialog"
        android:label="dialog_edit_book"
        tools:layout="@layout/dialog_edit_book" >
        <argument
            android:name="bookId"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="isEditing"
            app:argType="boolean" />
    </dialog>
    <dialog
        android:id="@+id/addPageDialog"
        android:name="com.mastermovilesua.persistencia.tfm_detectorpentagramas.ui.pagesList.view.AddPageDialog"
        android:label="AddPageDialog"
        tools:layout="@layout/dialog_add_page" >
        <argument
            android:name="bookId"
            app:argType="integer" />
        <action
            android:id="@+id/action_addPageDialog_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </dialog>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.mastermovilesua.persistencia.tfm_detectorpentagramas.ui.pagesList.view.AddPageCameraFragment"
        android:label="Camera"
        tools:layout="@layout/fragment_camera" >
        <argument
            android:name="bookId"
            app:argType="integer" />
    </fragment>
</navigation>