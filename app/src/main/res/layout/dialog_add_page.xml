<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btnOneImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT ONE IMAGE"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnMultipleImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT MULTIPLE IMAGES"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnOneImage"/>

    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAKE PICTURE"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnMultipleImages"/>

</androidx.constraintlayout.widget.ConstraintLayout>